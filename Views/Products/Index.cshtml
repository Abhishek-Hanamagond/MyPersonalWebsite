@model IEnumerable<MyPersonalWebsite.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 mb-4">
            <div class="product-card">
                <div class="product-title">
                     <a asp-action="Details" asp-route-id="@item.ProductId">@Html.DisplayFor(modelItem => item.Name)</a>
                </div>

                <div class="product-rating">
                    <span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9734;</span>
                </div>

                <div class="product-price">
                    $@item.Price.ToString("N2")
                </div>

                @if (item.Seller != null)
                {
                    <div class="product-seller">
                        Sold by: @Html.DisplayFor(modelItem => item.Seller.Name)
                    </div>
                }
                
                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary mt-auto">View Details</a>
            </div>
        </div>
    }
</div>

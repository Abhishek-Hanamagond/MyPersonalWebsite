@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6 fade-in">
            <h1 class="display-4">About MyPersonalWebsite</h1>
            <p class="lead">MyPersonalWebsite is a leading platform for discovering unique products and engaging with a vibrant community of sellers and bloggers. Our mission is to provide a seamless and enjoyable online experience for everyone.</p>
            <p>We believe in the power of connection and strive to foster a supportive environment where creativity and commerce can flourish. Whether you're a shopper, a seller, or a reader, MyPersonalWebsite has something for you.</p>
        </div>
        <div class="col-md-6 fade-in">
            <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?fit=crop&w=500&q=80" alt="About Us Image" class="img-fluid rounded shadow-lg">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center fade-in">
            <h2>Our Values</h2>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-rocket fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Innovation</h5>
                    <p class="card-text">We are constantly exploring new ideas and technologies to improve our platform.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-heart fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Community</h5>
                    <p class="card-text">We are committed to building a strong and supportive community of users.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Integrity</h5>
                    <p class="card-text">We operate with transparency and honesty in everything we do.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center fade-in">
            <h2>Our Journey</h2>
        </div>
        <div class="col-md-12">
            <ul class="timeline">
                <li class="timeline-item fade-in">
                    <div class="timeline-badge"><i class="fas fa-flag-checkered"></i></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">The Beginning</h4>
                            <p><small class="text-muted">2020</small></p>
                        </div>
                        <div class="timeline-body">
                            <p>MyPersonalWebsite was founded with a vision to create a unique online marketplace.</p>
                        </div>
                    </div>
                </li>
                <li class="timeline-item-inverted fade-in">
                    <div class="timeline-badge"><i class="fas fa-star"></i></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">First Milestone</h4>
                            <p><small class="text-muted">2021</small></p>
                        </div>
                        <div class="timeline-body">
                            <p>Reached 1,000 active users and expanded our product categories.</p>
                        </div>
                    </div>
                </li>
                <li class="timeline-item fade-in">
                    <div class="timeline-badge"><i class="fas fa-globe"></i></div>
                    <div class="timeline-panel">
                        <div class="timeline-heading">
                            <h4 class="timeline-title">Going Global</h4>
                            <p><small class="text-muted">2023</small></p>
                        </div>
                        <div class="timeline-body">
                            <p>Launched internationally, serving customers in over 50 countries.</p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

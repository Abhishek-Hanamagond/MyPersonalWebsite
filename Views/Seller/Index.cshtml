@model IEnumerable<LocalMarket.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>Sellers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-4 fade-in">
            <div class="product-card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <a asp-action="Edit" asp-route-id="@item.SellerId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SellerId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SellerId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

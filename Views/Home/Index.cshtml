@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Welcome to MyPersonalWebsite</h1>
        <p class="lead">Your one-stop shop for amazing products and insightful blogs.</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">Shop Now</a>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Quality Products</h5>
                    <p class="card-text">Discover a wide range of high-quality products at competitive prices.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-blog fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Engaging Blogs</h5>
                    <p class="card-text">Read our latest blog posts to stay informed and entertained.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user-tie fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Trusted Sellers</h5>
                    <p class="card-text">Buy with confidence from our community of trusted sellers.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 fade-in">
            <h1 class="display-4">About MyPersonalWebsite</h1>
            <p class="lead">MyPersonalWebsite is a leading platform for discovering unique products and engaging with a vibrant community of sellers and bloggers. Our mission is to provide a seamless and enjoyable online experience for everyone.</p>
            <p>We believe in the power of connection and strive to foster a supportive environment where creativity and commerce can flourish. Whether you're a shopper, a seller, or a reader, MyPersonalWebsite has something for you.</p>
        </div>
        <div class="col-md-6 fade-in">
            <img src="https://via.placeholder.com/500x300" alt="About Us Image" class="img-fluid rounded">
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center fade-in">
            <h2>Our Values</h2>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-lightbulb fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Innovation</h5>
                    <p class="card-text">We are constantly exploring new ideas and technologies to improve our platform.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Community</h5>
                    <p class="card-text">We are committed to building a strong and supportive community of users.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Integrity</h5>
                    <p class="card-text">We operate with transparency and honesty in everything we do.</p>
                </div>
            </div>
        </div>
    </div>
</div>

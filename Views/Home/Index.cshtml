@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center text-white">
    <div class="hero-overlay">
        <h1 class="display-3">Discover Your Next Favorite Thing</h1>
        <p class="lead">Explore a curated collection of unique products and insightful articles.</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">Shop Now</a>
    </div>
</div>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-12 mb-5">
            <h2 class="display-5">Why Choose Us?</h2>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card border-0 text-center">
                <div class="card-body">
                    <i class="fas fa-award fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Quality Products</h5>
                    <p class="card-text">We offer a curated selection of high-quality items from trusted sellers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card border-0 text-center">
                <div class="card-body">
                    <i class="fas fa-book-open fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Engaging Content</h5>
                    <p class="card-text">Our blog features insightful articles and stories from our community.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="card border-0 text-center">
                <div class="card-body">
                    <i class="fas fa-handshake fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Trusted Community</h5>
                    <p class="card-text">Join a vibrant community of buyers, sellers, and creators.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center fade-in">
            <h2>Featured Products</h2>
        </div>
        <div class="col-md-4 fade-in">
            <div class="product-card shadow-sm">
                <img src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?fit=crop&w=300&q=80" class="card-img-top" alt="Product 1">
                <div class="card-body">
                    <h5 class="card-title">Stylish Sneakers</h5>
                    <p class="card-text">Comfortable and fashionable sneakers for any occasion.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="product-card shadow-sm">
                <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?fit=crop&w=300&q=80" class="card-img-top" alt="Product 2">
                <div class="card-body">
                    <h5 class="card-title">Wireless Headphones</h5>
                    <p class="card-text">Immerse yourself in high-fidelity sound with these headphones.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in">
            <div class="product-card shadow-sm">
                <img src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?fit=crop&w=300&q=80" class="card-img-top" alt="Product 3">
                <div class="card-body">
                    <h5 class="card-title">Elegant Watch</h5>
                    <p class="card-text">A timeless timepiece that complements any outfit.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>
